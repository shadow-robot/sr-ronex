<!-- Very simple example of a robot with one continuous joint using the analogue pin 0 from
     a RoNeX GeneralIO module to set the current position of the joint. -->
<robot name="test_robot">
  <link name="link1" />
  <link name="link2" />

  <joint name="joint1" type="continuous">
    <parent link="link1"/>
    <child link="link2"/>
  </joint>

  <transmission type="sr_ronex_mechanism_model/RonexTransmission" name="my_ronex_transmission">
    <mapping ronex="ronex_12_0" property="position" analogue_pin="0" joint="joint_1" scale="1.0" offset="0.0"/>
    <mapping ronex="ronex_12_0" property="effort"   analogue_pin="1" joint="joint_1" scale="1.0" offset="0.0"/>
    <mapping ronex="ronex_12_0" property="command" pwm_module="1" pwm_pin="0" joint="joint_1"/>
  </transmission>
</robot>
